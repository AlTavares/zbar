#!/bin/bash
set -e

export CONFIG_SHELL=/usr/bin/bash.exe

autoreconf -vfi

./configure \
    --host=i686-w64-mingw32 \
    --prefix=/usr/local/win32 \
    ${DIRECT_SHOW} \
    --without-gtk \
    --without-python \
    --without-qt --without-java \
    --without-imagemagick \
    --enable-pthread --disable-dependency-tracking

$MAKE
$MAKE install
